# UNA Platform Environment Variables
# Copy this file to .env and fill in your values

# Site Configuration
VITE_SITE_URL=https://your-domain.vercel.app
VITE_SITE_NAME="UNA Formation Platform"
VITE_CONTACT_EMAIL=gigi@gigistardust.com

# Feature Flags
VITE_EXPLORE_MODE=lite
VITE_ENABLE_FORMATION=false
VITE_ENABLE_DOCS=false
VITE_ENABLE_PAYMENTS_UI=false
VITE_REQUIRE_ADMIN_AUTH=true
VITE_ENABLE_AFFILIATES=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_BLOG_ADMIN=false

# Admin Access
VITE_ADMIN_ALLOWED_EMAILS=gigi@gigistardust.com,admin@yourdomain.com

# Booking & Consultation
VITE_BOOKING_URL=https://calendly.com/gigi-stardust/una-consultation

# Payment Instructions (Parallel Economy)
VITE_BANK_TRANSFER_INSTRUCTIONS="Bank: [Your Bank] | Account: [Account Number] | Routing: [Routing Number]"
VITE_CRYPTO_WALLET_ADDRESS="[Your Crypto Wallet Address]"
VITE_PAYMENT_NOTES="Please include your UNA entity name in the payment reference"

# Email Provider (Future Integration)
VITE_EMAIL_PROVIDER=console
VITE_SENDGRID_API_KEY=your_sendgrid_key_here
VITE_MAILGUN_API_KEY=your_mailgun_key_here
VITE_MAILGUN_DOMAIN=your_domain_here

# Analytics (Future Integration)
VITE_ANALYTICS_PROVIDER=internal
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_PLAUSIBLE_DOMAIN=your_domain_here

# Affiliate System
VITE_AFFILIATE_DISCLOSURE_TEXT="This post may contain affiliate links. We may earn a commission when no additional cost to you."

# SEO & Social
VITE_DEFAULT_OG_IMAGE=https://your-domain.vercel.app/og-image.jpg
VITE_TWITTER_HANDLE=@your_handle
VITE_FACEBOOK_PAGE=your_page_name
